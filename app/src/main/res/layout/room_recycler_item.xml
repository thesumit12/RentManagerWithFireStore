<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/room_icon"
        android:id="@+id/ib_home_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ib_home_button"
        app:layout_constraintEnd_toEndOf="@id/ib_home_button"
        app:layout_constraintTop_toBottomOf="@id/ib_home_button"
        android:text="Room 1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/tv_room_no"
        />

</android.support.constraint.ConstraintLayout>