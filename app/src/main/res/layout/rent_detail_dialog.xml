<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_rd_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="title"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_electricity_bill_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electricity Bill"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rd_dialog_title"/>

    <TextView
        android:id="@+id/tv_electricity_bill_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_electricity_bill_left"
        app:layout_constraintTop_toTopOf="@id/tv_electricity_bill_left"/>

    <TextView
        android:id="@+id/tv_water_bill_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Bill"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_electricity_bill_left"/>

    <TextView
        android:id="@+id/tv_water_bill_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_electricity_bill_left"
        app:layout_constraintTop_toTopOf="@id/tv_water_bill_left"/>


    <Button
        android:id="@+id/btn_rd_ok"
        style="@style/Button.Action.Positive"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:text="ok"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_water_bill_left" />


</android.support.constraint.ConstraintLayout>